{
    "name": "jainec/hyperf-fakie",
    "description": "Test object factory for Hyperf PHP",
    "type": "library",
    "keywords": [
        "php",
        "swoole",
        "hyperf",
        "tests"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jaine Conceição Santos",
            "email": "jaine.ccs@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "hyperf/cache": "~2.2.0",
        "hyperf/command": "~2.2.0",
        "hyperf/config": "~2.2.0",
        "hyperf/db-connection": "~2.2.0",
        "hyperf/framework": "~2.2.0",
        "hyperf/guzzle": "~2.2.0",
        "hyperf/http-server": "~2.2.0",
        "hyperf/logger": "~2.2.0",
        "hyperf/memory": "~2.2.0",
        "hyperf/process": "~2.2.0"
    },
    "require-dev": {
        "hyperf/testing": "~2.2.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "JaineC\\Hyperf\\Fakie\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "hyperf": {
            "config": "JaineC\\Hyperf\\Fakie\\ConfigProvider"
        }
    },
    "scripts": {
        "test": "co-phpunit --prepend test/bootstrap.php -c phpunit.xml --colors=always --coverage-html=./test/reports/coverage",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config"
    }
}
